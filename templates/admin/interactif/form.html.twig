{% extends '@SyliusUi/layout/centered.html.twig' %}

{% block content %}
  <div class="ui container">
    <h2 class="ui header">{{ title }}</h2>
    {{ form_start(form, {attr: {class: 'ui form'}}) }}
      {{ form_row(form.libelle) }}
      <div class="fields">
        <div class="field">{{ form_row(form.is_visiteur_needed) }}</div>
        <div class="field">{{ form_row(form.is_logvisite_needed) }}</div>
        <div class="field">{{ form_row(form.is_parcours_needed) }}</div>
      </div>
      <button class="ui primary button" type="submit">Enregistrer</button>
      <a class="ui button" href="{{ path('admin_interactif_index') }}">Annuler</a>
    {{ form_end(form) }}
  </div>
{% endblock %}

