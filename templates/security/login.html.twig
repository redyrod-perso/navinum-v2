{% extends '@SyliusUi/layout/centered.html.twig' %}

{% block content %}
  <div class="ui container">
    <h2 class="ui header">Connexion</h2>
    {% if error %}
      <div class="ui red message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post" class="ui form" action="{{ path('app_login') }}">
      <div class="field">
        <label for="username">Utilisateur</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
      </div>
      <div class="field">
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" required>
      </div>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
      <button class="ui primary button" type="submit">Se connecter</button>
    </form>
  </div>
{% endblock %}

